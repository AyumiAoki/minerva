
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" /> <!-- valor do arredondamento das bordas -->
            <solid android:color="@color/colorWhite" />
            <padding android:bottom="0dp" android:left="8dp" android:right="8dp" android:top="0dp" />
            <stroke android:width="2dp" android:color="@color/verde" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="5dp" /> <!-- valor do arredondamento das bordas -->
            <solid android:color="@color/verde" />
            <padding android:bottom="0dp" android:left="8dp" android:right="8dp" android:top="0dp" />
            <stroke android:width="2dp" android:color="@color/verde" />
        </shape>
    </item>

</selector>

