<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PresentationActivity">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/tela_apresentacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/visualizar_pontos"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="56dp">

            <Button
                android:id="@+id/pular"
                android:background="@drawable/custom_button_presentation"
                android:stateListAnimator="@null"
                android:elevation="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="16dp"
                android:text="Pular"
                android:textAllCaps="false"
                android:textColor="@drawable/custom_view_text_google" />

            <LinearLayout
                android:id="@+id/ponto"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="2.8"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

            <Button
                android:id="@+id/proximo"
                android:background="@drawable/custom_button_presentation"
                android:stateListAnimator="@null"
                android:elevation="20dp"
                android:text=">"
                android:textStyle="bold"
                android:textColor="@drawable/custom_view_text_google"
                android:textSize="16dp"
                android:scaleType="centerCrop"
                android:layout_weight="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>