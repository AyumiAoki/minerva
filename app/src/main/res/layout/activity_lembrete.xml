<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    tools:context=".ui.activities.LembreteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_view_calendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_calendario"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_data_lembrete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_titulo_lembrete" />

        <TextView
            android:id="@+id/text_titulo_lembrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:paddingStart="16dp"
            android:paddingTop="32dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:text="Estudar lp"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_data_lembrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 de junho de 2003"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/image_view_calendario"
            app:layout_constraintTop_toBottomOf="@+id/text_view_hora_lembrete" />

        <TextView
            android:id="@+id/text_view_hora_lembrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/text_view_data_lembrete"
            app:layout_constraintTop_toBottomOf="@+id/text_titulo_lembrete" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>